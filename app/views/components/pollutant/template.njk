{% from "govuk/components/tag/macro.njk" import govukTag %}
<div class="govuk-grid-column-one-third govuk-!-margin-bottom-3">
  <h3 class="govuk-heading-s govuk-!-margin-bottom-2">
    <a class="govuk-link" href="{{ params.href }}">{{ params.type | safe }}</a>
  </h3>
  <div class="govuk-body govuk-!-margin-bottom-0 govuk-!-font-weight-bold govuk-!-font-size-80">
    {{ params.value }}
  </div>
    <p class="govuk-body govuk-!-font-weight-bold govuk-!-margin-bottom-3">
      {{ params.unit | safe }}
    </p>
    {{ govukTag({
      text: params.tagText or 'Low',
      classes: (params.tagClass or 'govuk-tag--turquoise') + " govuk-!-margin-right-1 govuk-!-margin-bottom-3"
    }) }}
    <span class="govuk-body-s">{{ params.limit | safe }}</span>
</div>